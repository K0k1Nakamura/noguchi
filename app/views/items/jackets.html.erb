        <div id="palette_wrapper" class="palette-wrapper">
          <ol id="palette" class="palette">
            <li data-key='0' class="color n0"></li>
            <li data-key='1' class="color n1"></li>
            <li data-key='2' class="color n2"></li>
            <li data-key='3' class="color n3"></li>
            <li data-key='4' class="color n4"></li>
            <li data-key='5' class="color n5"></li>
            <li data-key='6' class="color n6"></li>
            <li data-key='7' class="color n7"></li>
            <li data-key='8' class="color n8"></li>
            <li data-key='9' class="color n9"></li>
          </ol>
          <div id="btn_register" class="btn"></div>
        </div>
      </div>

      <ul class="cd-gallery">
        <li>
          <span>
            <ul class="cd-item-wrapper">
              <% @items.each.with_index(0) do |item, index| %>
                <li class="<%= give_class_to_li(index)%>"
                  <%= give_data_to_li(item) %>>
                  <a href="<%= item.link_url %>">
                    <img src="<%= image_path(item.image_url) %>" alt="Preview image">
                  </a>
                </li>
              <% end %>
            </ul> <!-- cd-item-wrapper -->
